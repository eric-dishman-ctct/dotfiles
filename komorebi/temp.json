{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.31/schema.bar.json",
  "font_family": "JetBrains Mono",
  "font_size": 14,
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 50,
      "right": 0,
      "bottom": 50
    }
  },
  "left_widgets": [
    {
      "Battery": {
        "enable": false
      }
    },
    {
      "Cpu": {
        "enable": false
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        }
      }
    },
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": false
      }
    },
    {
      "Network": {
        "enable": false,
        "show_network_activity": false,
        "show_total_data_transmitted": false
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Time": {
        "enable": false,
        "format": "TwelveHour"
      }
    }
  ],
  "right_widgets": [
    {
      "Battery": {
        "enable": true
      }
    },
    {
      "Cpu": {
        "enable": true
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": false,
        "show_network_activity": false,
        "show_total_data_transmitted": false
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Time": {
        "enable": false,
        "format": "TwelveHour"
      }
    }
  ]
}

