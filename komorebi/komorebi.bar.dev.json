{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 60,
      "right": 0,
      "bottom": 60
    }
  },
  "font_family": "JetBrains Mono",
  "theme": {
    "palette": "Base16",
    "name": "SolarflareLight",
    "accent": "Base09"
  },
  "frame": {
    "inner_margin": {
      "x": 10,
      "y": 5
    }
  },
  "max_label_width": 200.0,
  "transparency_alpha": 255,
  "grouping": {
    "kind": "Widget",
    "style": "DefaultWithShadow",
    "transparency_alpha": 255,
    "rounding": 10
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": false,
          "hide_empty_workspaces": false,
          "display": "Icon"
        },
        "configuration_switcher": {
          "enable": false,
          "configurations": {
            "one": "C:\\Users\\Csaba\\komorebi.json",
            "two": "C:\\Users\\Csaba\\komorebi.json"
          }
        },
        "layout": {
          "enable": true,
          "display": "Icon",
          "options": [
            "BSP",
            "UltrawideVerticalStack",
			"Monocle",
            "Floating",
            "Paused"
          ]
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndText"
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear",
        "label_prefix": "Icon"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour",
        "label_prefix": "Icon"
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "data_refresh_interval": 2,
		"show_default_interface": false,
        "show_total_data_transmitted": true,
        "show_network_activity": true,
        "network_activity_fill_characters": 10
      }
    },
    {
      "Cpu": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    },
    {
      "Memory": {
        "enable": true,
        "data_refresh_interval": 5,
        "label_prefix": "Icon"
      }
    }
  ]
}

