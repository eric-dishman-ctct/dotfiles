{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "bar_configurations": ["$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.json",],
  "window_hiding_behaviour": "Cloak",
  "mouse_follows_focus": true,
  "cross_monitor_move_behaviour": "Insert",
  "transparency": false,
  "transparency_alpha": 250,
  "default_workspace_padding": 5,
  "default_container_padding": 5,
  "border_width": 5,
  "border_padding": 0,
  "border_offset": -1,
  "border": true,
  "border_style": "Rounded",
  "border_colours": {
    "single": "#92ee93",
    "stack": "#42a5f5",
    "monocle": "#ff3399"
  },
  "stackbar": {
    "height": 20,
    "mode": "OnStack",
    "label": "Title",
    "tabs": {
      "width": 225,
      "focused_text": "#00a542",
      "unfocused_text": "#b3b3b3",
      "background": "#141414",
      "font_siz4": 14
    }
  },
  "display_index_preferences": {
    "0": "DELA0DC-4&311f1208&0&UID24645",
    "1": "DELA0DB-4&311f1208&0&UID28997"
  },
  "monitors": [
    {
      "window_based_work_area_offset": {
        "top": 0,
        "bottom": 0,
        "left": 0,
        "right": 0
      },
      "workspaces": [
        {
          "name": "I",
          "layout": "VerticalStack"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "VerticalStack"
        },
        {
          "name": "IV",
          "layout": "VerticalStack"
        },
        {
          "name": "V",
          "layout": "UltrawideVerticalStack"
        }
      ]
    },
    {
      "window_based_work_area_offset": {
        "top": 0,
        "bottom": 0,
        "left": 0,
        "right": 0
      },
      "workspaces": [
        {
          "name": "Focus",
          "layout": "VerticalStack"
        },
        {
          "name": "Backup",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "VerticalStack"
        },
        {
          "name": "IV",
          "layout": "HorizontalStack"
        },
        {
          "name": "V",
          "layout": "UltrawideVerticalStack"
        }
      ]
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "zebar.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Sharing Indicator",
      "matching_strategy": "Contains"
    }
  ],
  "manage_rules": [
    {
      "kind": "Title",
      "id": "wezterm",
      "matching_strategy": "Equals"
    }
  ]
}
