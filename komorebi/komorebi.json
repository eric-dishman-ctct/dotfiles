{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.json",
    "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
    "window_hiding_behaviour": "Cloak",
    "mouse_follows_focus": true,
    "cross_monitor_move_behaviour": "Insert",
    "transparency": false,
    "transparency_alpha": 200,
    "default_workspace_padding": 5,
    "default_container_padding": 5,
    "window_container_behaviour": "Append",
    "border_width": 5,
    "border_padding": 0,
    "border_offset": -1,
    "border": true,
    "border_style": "Rounded",
    "border_colours": {
        "single": "#92ee93",
        "stack": "#42a5f5",
        "monocle": "#ff3399"
    },
    "floating_window_aspect_ratio": "Widescreen",
    "stackbar": {
        "height": 20,
        "mode": "Never",
        "label": "Title",
        "tabs": {
            "width": 225,
            "focused_text": "#00a542",
            "unfocused_text": "#b3b3b3",
            "background": "#141414",
            "font_siz4": 14
        }
    },
    "animation": {
        "duration": 100,
        "enabled": true,
        "style": "EaseInOutQuad",
        "fps": 90
    },
    "display_index_preferences": {
        "0": "0",
        "1": "KH0NG66A316B",
        "2": "KH0NG66A3J9B",
        "3": "431338"
